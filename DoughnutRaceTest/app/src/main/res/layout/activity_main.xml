<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    tools:context="edu.dnaomi94utexas.doughnutracetest.MainActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:background="@color/brown">

        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TableRow>

                <Button
                    android:id="@+id/new_game"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:text="@string/new_game"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/scores"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/new_game"
                    android:text="Scores"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/instructions"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_below="@+id/new_game"
                    android:layout_margin="5dp"
                    android:text="@string/instructions"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/settings"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_below="@id/scores"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/instructions"
                    android:text="@string/settings"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </TableRow>
        </TableLayout>
    </LinearLayout>


</RelativeLayout>
